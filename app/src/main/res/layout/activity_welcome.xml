<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".activities.WelcomeActivity">

    <TextView
        android:id="@+id/textBienvenida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¡Bienvenido/a!"
        android:textSize="42sp"
        android:padding="10dp"
        android:gravity="center"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿Qué tal se encuentran hoy tus plantas?"
        android:padding="10dp"
        android:textSize="20sp"
        android:gravity="center"
        />

    <EditText
        android:id="@+id/editTextNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Ingresa tu nombre"
        android:padding="10dp"
        android:textSize="18sp"
        android:visibility="gone" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnGuardarNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guardar nombre"
        android:backgroundTint="@android:color/white"
        app:strokeColor="@color/green"
        app:strokeWidth="2dp"
        app:cornerRadius="32dp"
        android:visibility="gone"
        style="@style/Widget.Material3.Button.OutlinedButton" />

    <Button
        android:id="@+id/btnBuscarPlantas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:padding="15dp"
        android:textSize="20sp"
        android:backgroundTint="@color/green"
        android:text="Búsqueda de plantas"
        />

    <Button
        android:id="@+id/btnMisPlantas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:textSize="20sp"
        android:backgroundTint="@color/green"
        android:text="Mis Plantas"
        />

</LinearLayout>